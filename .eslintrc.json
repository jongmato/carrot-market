{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "standard-with-typescript",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:@next/next/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    }
  },
  "ignorePatterns": [
    ".eslintrc.json",
    "node_modules/*",
    ".next/*",
    ".husky/*",
    "tailwind.config.js",
    "prettier.config.js",
    "postcss.config.js"
  ]
}
